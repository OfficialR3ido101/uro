<%= form_for @changeset, @action, [multipart: true], fn f -> %>
  <%= render UroWeb.LayoutView, "error.html", changeset: @changeset%>

  <%= label f, :name, gettext("Name") %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :description, gettext("Description") %>
  <%= textarea f, :description %>
  <%= error_tag f, :description %>

  <%= label f, :thumbnail_file, gettext("Thumbnail File") %>
  <%= file_input f, :thumbnail_file %>
  <%= error_tag f, :thumbnail_file %>

  <%= label f, :avatar_file, gettext("Avatar File") %>
  <%= file_input f, :avatar_file %>
  <%= error_tag f, :avatar_file %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
